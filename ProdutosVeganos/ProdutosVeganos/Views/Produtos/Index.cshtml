@{
    ViewData["Title"] = "Produtos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model List<Produto>
<h2>Produtos</h2>

<form role="form" method="post" asp-action="Index">
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label class="control-label" for="Produto.CodigoBarra">Código de Barra</label>
                <input type="text" class="form-control" id="Produto.CodigoBarra" name="Produto.CodigoBarra">
            </div>
        </div>
        <div class="col-md-8">
            <div class="form-group">
                <label class="control-label" for="Produto.Nome">Nome</label>
                <input type="text" class="form-control" id="Produto.Nome" name="Produto.Nome">
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <button type="submit" class="btn btn-success">Consultar</button>
                <a asp-area="" asp-controller="Produtos" asp-action="Index" class="btn btn-success">Todos</a>
                <a asp-area="" asp-controller="Produtos" asp-action="Cadastro" class="btn btn-success">Incluir</a>
            </div>
        </div>
    </div>
</form>

<table id="tblProdutos" class="table table-striped table-bordered" cellspacing="0">
    <thead>
        <tr>
            <th>Barra</th>
            <th>Nome</th>
            <th>Site</th>
            <th>Consultar</th>
            <th>Editar</th>
            <th>Excluir</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var produto in Model)
        {
        <tr produto-id="@produto.Id">
            <td><a asp-area="" asp-controller="Produtos" asp-action="Detalhe" asp-route-id="@produto.CodigoBarra">@produto.CodigoBarra</a></td>
            <td>@produto.Nome</td>
            <td>@produto.Site</td>
            <td>
                <a class="btn btn-info btn-sm" asp-controller="Produtos" asp-action="Detalhe" asp-route-id="@produto.CodigoBarra">
                    <span class="glyphicon glyphicon-search"></span> Consultar
                </a>
            </td>
            <td>
                <a class="btn btn-info btn-sm" asp-controller="Produtos" asp-action="Cadastro" asp-route-id="@produto.CodigoBarra">
                    <span class="glyphicon glyphicon-pencil"></span> Editar
                </a>
            </td>
            <td>
                <a class="btn btn-info btn-sm" href="#" onclick="produto.removerProduto(this)">
                    <span class="glyphicon glyphicon-remove"></span> Excluir
                </a>
            </td>
        </tr>
        }
    </tbody>
</table>

@section Scripts
{
    <script src="~/js/Produto.js"></script>
}
