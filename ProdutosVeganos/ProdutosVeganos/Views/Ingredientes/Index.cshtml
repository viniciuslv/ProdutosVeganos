@{
    ViewData["Title"] = "Ingredientes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model List<Ingrediente>
<h2>Ingredientes</h2>

<form role="form" method="post" asp-action="Index">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label class="control-label" for="Ingrediente.Nome">Nome</label>
                <input type="text" class="form-control" id="Ingrediente.Nome" name="Ingrediente.Nome" data-val="true" data-val-required="Nome Obrigatório">
                <span class="text-danger field-validation-valid" data-valmsg-for="Ingrediente.Nome" data-valmsg-replace="true"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <button type="submit" class="btn btn-success">Consultar</button>
                <a asp-area="" asp-controller="Ingredientes" asp-action="Index" class="btn btn-success">Todos</a>
                <a asp-area="" asp-controller="Ingredientes" asp-action="Cadastro" class="btn btn-success">Incluir</a>
            </div>
        </div>
    </div>
</form>

<hr />

<table id="example" class="table table-striped table-bordered" cellspacing="0">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Vegan</th>
            <th>Lactose</th>
            <th>Glutem</th>
            <th>Consultar</th>
            <th>Editar</th>
            <th>Excluir</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ingrediente in Model)
        {
        <tr ingrediente-id="@ingrediente.Id">
            <td>@ingrediente.Nome</td>
            <td>
                @ingrediente.Vegano
            </td>
            <td>
                <span class="glyphicon glyphicon-@(ingrediente.TemLactose ? "ok": "remove")"></span>
            </td>
            <td>
                <span class="glyphicon glyphicon-@(ingrediente.TemGlutem ? "ok": "remove")"></span>
            </td>
            <td>
                <a class="btn btn-info btn-sm" asp-controller="Ingredientes" asp-action="Detalhe" asp-route-id="@ingrediente.Id">
                    <span class="glyphicon glyphicon-search"></span> Consultar
                </a>
            </td>
            <td>
                <a class="btn btn-info btn-sm" asp-controller="Ingredientes" asp-action="Cadastro" asp-route-id="@ingrediente.Id">
                    <span class="glyphicon glyphicon-pencil"></span> Editar
                </a>
            </td>
            <td>
                <a class="btn btn-info btn-sm" href="#" onclick="ingrediente.removerIngrediente(this)">
                    <span class="glyphicon glyphicon-remove"></span> Excluir
                </a>
            </td>
        </tr>
        }
    </tbody>
</table>

@section Scripts
{
    <script src="~/js/Ingrediente.js"></script>
}

